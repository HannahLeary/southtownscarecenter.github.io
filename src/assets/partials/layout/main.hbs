<!doctype html>
<html class="no-js" lang="en">
<head>

	<meta charset="utf-8" />
	<meta http-equiv="x-ua-compatible" content="ie=edge" />
	<meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1" />

	<title>{{#if title}}{{title}} | {{/if}}{{site.title}}</title>

	<link rel="author" href="{{site.canonical}}/humans.txt" />
	<link rel="canonical" href="{{site.canonical}}{{canonical}}" />

	{{#block "styles"}}
		<link rel="stylesheet" href="/assets/css/index.css?v={{package.version}}" />
	{{/block}}

</head>
<body class="site">

	<a class="skip" href="#main">Skip to Content</a>

	<header class="site-hd">
		<div class="container">
			<h1>
				<a class="logo" href="/">
					<span class="logo-bd">
						<span class="aspect aspect_block">
							<svg class="aspect-bd">
								<use xlink:href="/assets/svg/sprites.svg?v={{package.version}}#logo-tall"></use>
							</svg>
						</span>
					</span>
					<span class="u-visuallyHidden">{{site.title}}</span>
				</a>
			</h1>

			<nav class="nav bpPr-u-hidden" aria-label="primary">
				<a class="nav-link" href="/about">About</a>
				<a class="nav-link" href="/services">Services</a>
				<a class="nav-link" href="/events">Events</a>
				<a class="nav-icn bpXs-u-hidden" href="https://instagram.com/southtownscc" rel="external">
					<span class="aspect aspect_inline">
						<svg class="aspect-bd">
							<use xlink:href="/assets/svg/sprites.svg?v={{package.version}}#social-instagram"></use>
						</svg>
					</span>
					<span class="u-visuallyHidden">Instagram</span>
				</a>
				<a class="nav-icn bpXs-u-hidden" href="https://twitter.com/southtownscc" rel="external">
					<span class="aspect aspect_inline">
						<svg class="aspect-bd">
							<use xlink:href="/assets/svg/sprites.svg?v={{package.version}}#social-twitter"></use>
						</svg>
					</span>
					<span class="u-visuallyHidden">Twitter</span>
				</a>
				<a class="nav-icn" href="https://facebook.com/southtownscarecenter" rel="external">
					<span class="aspect aspect_inline">
						<svg class="aspect-bd">
							<use xlink:href="/assets/svg/sprites.svg?v={{package.version}}#social-facebook"></use>
						</svg>
					</span>
					<span class="u-visuallyHidden">Facebook</span>
				</a>
				<a class="btn" href="/support">Donate</a>
			</nav>
		</div>
	</header>

	<main id="main" class="site-bd">
		<div class="container">
			{{{block "body"}}}
		</div>
	</main>

	<footer class="site-ft">
		<div class="container u-vr">
			<h1 class="u-visuallyHidden">SCC Footer</h1>

			<div class="grid m-grid_rev">
				<div class="grid_col bpPr-u-hidden u-vr">
					<div class="u-vrSm">
						<h2 class="hdg hdg_5">Newsletter</h2>
						{{{embed "vendor/mailchimp"}}}
					</div>

					<div class="u-vrSm">
						<h2 class="hdg hdg_5">Share</h2>
						{{{embed "vendor/addthis"}}}
					</div>
				</div>

				<div class="grid_col bpPr-u-hidden u-vrSm">
					<h2 class="hdg hdg_5">Menu</h2>
					<nav class="vList" aria-label="appendix">
						<a class="link" href="/">Home</a>
						<a class="link" href="/about">About</a>
						<a class="link" href="/services">Services</a>
						<a class="link" href="/events">Events</a>
						<a class="link" href="/support">Donate</a>
						<a class="link" href="/support">Volunteer</a>
						<a class="link" href="/styleguide">Styleguide</a>
					</nav>
				</div>

				<div class="grid_col u-vrSm">
					<h2 class="hdg hdg_4">
						<span class="aspect aspect_inline aspect_inline_3x1">
							<svg class="aspect-bd">
								<use xlink:href="/assets/svg/sprites.svg?v={{package.version}}#logo-wide"></use>
							</svg>
						</span>
						<span class="u-visuallyHidden">Contact Information</span>
					</h2>

					{{{embed "microdata/scc-org"}}}
				</div>
			</div>
		</div>
	</footer>

	{{#block "scripts"}}
		<script src="/assets/js/index.js?v={{package.version}}" async defer></script>
	{{/block}}

	{{{embed "vendor/analytics"}}}

</body>
</html>
